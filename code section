// vektoru birim vektore donusturen program

#include <stdio.h>
#include <math.h>

int main()
{
    
    double vektor1[2],vektor2[2];
    double e,e1,e2,u,s;

    printf("Bir vektor giriniz:");
    scanf("%lf%lf",&vektor1[0],&vektor1[1]);

    u = sqrt(pow(vektor1[0],2) + pow(vektor1[1],2));

    
    
    e1 = vektor1[0]/u;
    e2 = vektor1[1]/u;
    vektor2[0] = e1; 
    vektor2[1] = e2;

    

    printf("\ngirilen vektorun birim vektor hali:\t(%lf,%lf)\n",vektor2[0],vektor2[1]);
   
    return 0;
}
